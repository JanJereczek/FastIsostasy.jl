	month = jun,
	year = {2022},
	pages = {2203--2223},
	file = {Wan et al. - 2022 - Resolving glacial isostatic adjustment (GIA) in re.pdf:/home/jan/Zotero/storage/2QPFPMEK/Wan et al. - 2022 - Resolving glacial isostatic adjustment (GIA) in re.pdf:application/pdf},
